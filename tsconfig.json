{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "target": "es2022",
        "module": "esNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "typeRoots": ["./node_modules/@types"],
        "declaration": true,
        "declarationMap": false,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "ts-node": {
        "files": true
    }
}
